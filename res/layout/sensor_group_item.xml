<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="#FFF">

    <ImageView
        android:id="@+id/colExpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/moreinfo_arrow_collapsed" />

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/colExpBtn"
        android:padding="5dp"
        android:text="Generic Sensor"
        android:textColor="#000"
        android:textSize="17dp" />

    <LinearLayout 
    	android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
    	android:layout_below="@+id/lblListHeader"
        android:orientation="horizontal">
	         <ImageView
	        android:id="@+id/notes"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        style="@style/Widget.Sherlock.ActionButton"
      	    android:layout_height="wrap_content"
	        android:src="@drawable/ic_action_notes" />
	          <View
	        	 android:layout_width="0.5dp"
        	 	 android:layout_height="match_parent"
        	 	 android:layout_marginTop="3dp"
	        	 android:layout_marginBottom="3dp" 
        	 	 android:background="#D3D3D3"></View>
	     
	           <ImageView
      		 android:id="@+id/navigate_to"
      		 android:layout_weight="1"
        	 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 style="@style/Widget.Sherlock.ActionButton"
        	 android:src="@drawable/ic_location_on_map" />
	           
	           <View
	        	 android:layout_width="0.5dp"
	        	 android:layout_marginTop="3dp"
	        	 android:layout_marginBottom="3dp"
        	 	 android:layout_height="match_parent" 
        	 	 android:background="#D3D3D3"></View>
	         <ImageView
      		 android:id="@+id/details"
      		 android:layout_weight="1"
      		 android:layout_width="wrap_content"
        	 style="@style/Widget.Sherlock.ActionButton"
        	 android:layout_height="wrap_content"
        	 android:src="@drawable/ic_action_navigation_more_horiz" />
        
    </LinearLayout>
   
  

</RelativeLayout>
